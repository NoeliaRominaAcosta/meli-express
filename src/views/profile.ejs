<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Entrar'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Perfil</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre</label>
						<input type="text" id="name" name="name" class="form-input" value="<%=user.name %>">
						<span><%= locals.errors && errors.name ? errors.name.msg : null %></span>
					</div>
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Apellido</label>
						<input type="text" id="name" name="surname" class="form-input" value="<%=user.surname %>">
						<span><%= locals.errors && errors.surname ? errors.surname.msg : null %></span>

					</div>
                    <div class="col-12 col-md-6">
						<label for="" class="form-label">Email</label>
						<input type="email" id="" name="email" class="form-input" value="<%= user.email %>" disabled>
						<span><%= locals.errors && errors.email ? errors.email.msg : null %></span>

					</div>
                    <div class="col-12 col-md-6">
						<label for="" class="form-label">Fecha de nacimiento</label>
						<input type="date" id="" name="email" class="form-input" value="<%= user.date %>">
						<span><%= locals.errors && errors.date ? errors.date.msg : null %></span>

					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Actualizar</button>
                        <a href="/" class="buy-now-button">Cancelar</a>

					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>